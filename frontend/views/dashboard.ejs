<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head', {title: 'Dashboard'}); %>
</head>
<body class="bg-gray-100">
  <%- include('partials/header'); %>

  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Dashboard</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold mb-2">Total Bins</h3>
        <p class="text-4xl font-bold text-green-500" id="total-bins"></p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold mb-2">Full Bins</h3>
        <p class="text-4xl font-bold text-red-500" id="full-bins"></p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold mb-2">Critical Bins</h3>
        <p class="text-4xl font-bold text-yellow-500" id="critical-bins"></p>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
      <div class="p-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold">Bin Status Overview</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200" id="bins-table">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bin ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Area</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fill Level</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time Until Full</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200" id="bins-data">
          </tbody>
        </table>
      </div>
    </div>

  <%- include('partials/footer'); %>
  <%- include('partials/scripts'); %>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      fetch('/api/predict')
        .then(response => response.json())
        .then(data => {
          updateDashboard(data);
          renderCharts(data);
        })
        .catch(error => {
          console.error('Error loading data:', error);
        });
    });

function updateDashboard(data) {
  const binsData = document.getElementById('bins-data');
  let fullBins = 0;
  let criticalBins = 0;
  
  // Remove any slicing to show all bins
  binsData.innerHTML = data.map(bin => {
    if (bin.predicted_fill >= 100) fullBins++;
    else if (bin.predicted_fill >= 80) criticalBins++;
    
    let status, statusColor;
    if (bin.status === 'full') {
      status = 'Full';
      statusColor = 'bg-red-100 text-red-800';
    } else if (bin.status === 'critical') {
      status = 'Critical';
      statusColor = 'bg-yellow-100 text-yellow-800';
    } else if (bin.status === 'no-data') {
      status = 'No Data';
      statusColor = 'bg-gray-100 text-gray-800';
    } else {
      status = 'Normal';
      statusColor = 'bg-green-100 text-green-800';
    }
    
    return `
      <tr>
        <td class="px-6 py-4 whitespace-nowrap font-medium">${bin.bin_id}</td>
        <td class="px-6 py-4 whitespace-nowrap">${bin.area}</td>
        <td class="px-6 py-4 whitespace-nowrap">
          <div class="w-full bg-gray-200 rounded-full h-2.5">
            <div class="h-2.5 rounded-full ${bin.status === 'no-data' ? 'bg-gray-400' : 'bg-green-600'}" 
                 style="width: ${bin.status === 'no-data' ? 100 : Math.min(bin.predicted_fill, 100)}%"></div>
          </div>
          <span class="text-sm text-gray-500">${bin.status === 'no-data' ? 'N/A' : bin.predicted_fill + '%'}</span>
        </td>
        <td class="px-6 py-4 whitespace-nowrap">
          <span class="px-2 py-1 text-xs rounded-full ${statusColor}">${status}</span>
        </td>
        <td class="px-6 py-4 whitespace-nowrap">${bin.minutes_until_full}</td>
      </tr>
    `;
  }).join('');
  
  document.getElementById('total-bins').textContent = data.length;
  document.getElementById('full-bins').textContent = fullBins;
  document.getElementById('critical-bins').textContent = criticalBins;
}
    </script>    

</body>
</html>